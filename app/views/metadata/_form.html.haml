= form_for @metadatum do |f|
  - if @metadatum.errors.any?
    #error_explanation
      %h2= "#{pluralize(@metadatum.errors.count, "error")} prohibited this metadatum from being saved:"
      %ul
        - @metadatum.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :web
    = f.text_field :web
  .field
    = f.label :kaptive
    = f.text_field :kaptive
  .field
    = f.label :address
    = f.text_area :address
  .actions
    = f.submit 'Save'
