= render 'scripts/carousel_evolution'



%header
  %h2.page-title
    .caption
      = page_title! 'Productos'

  //- if current_admin
  .administrate.create{:style => 'display: none'}
    = link_to 'Crear Producto', new_product_path, class: 'btn btn-primary'



.content
  .content-inner
    <!-- BEGIN CAROUSEL -->
    .carousel
      <!-- BEGIN SLIDES -->
      .slides
        - @products.each do |product|
          <!-- SLIDE ITEM -->
          .indexed
            = image_tag product.bottle_url(:blurred) if product.bottle?

    .product-description
      .linea-vertical
        .linea-horizontal
      - @products.each do |product|
        .resumen-id.indexed
          %h3.title
            .caption
              = truncate(product.name, length: 30)
              %span.sub-title.caption
                = truncate(product.description, length: 30)

          .resumen-content
            .productos-imagen
              = image_tag product.bottle_url(:thumb) if product.bottle?
            
            .productos-preview
              %span.product-label
                Our brand
              %p
                = truncate(product.preview, length: 100)

            = link_to 'Read more', product, :class => 'link link-read-more'

-#
    = product.description
  = product.content
  = product.preview
  = image_tag product.bottle_url(:thumb) if product.bottle?
  = image_tag product.bottleback_url(:thumb) if product.bottleback?
  = link_to 'Show', product
  = link_to 'Edit', edit_product_path(product)
  = link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }


