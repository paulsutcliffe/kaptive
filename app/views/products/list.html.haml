%header
  %h2.page-title
    .caption
      = page_title! 'Products List'
  %span.crud-date
    %span.created_at
      Last product created at:
      = l @last_product.created_at, :format => :long

  - if current_admin
    .administrate.create
      = link_to 'New Product', new_product_path, class: 'btn btn-primary'

.content
  .content-inner
    %table.table.table-striped.table-bordered
      %thead
        %tr
          %th.table-name Product
          %th.table-email Name
          %th.table-date
          %th.table-crud
          %th.table-crud
          %th.table-crud

      %tbody
        - @products.each do |product|
          %tr
            %td.table-name= image_tag product.bottle_url(:thumb) if product.bottle?
            %td.table-email= product.name
            %td.table-date= l product.created_at, :format => :long
            %td= link_to 'Show', product, :class => 'button button-show'
            %td= link_to 'Edit', edit_product_path(product), :class => 'button button-update'
            %td= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'button button-delete'


