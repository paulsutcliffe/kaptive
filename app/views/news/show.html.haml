

%header
  %h2.page-title
    .caption
      News

  //- if current_admin
  .administrate.create{:style => 'display: none'}
    = link_to 'Edit', edit_news_path(@news), class: 'button button-update'



%section.content
  .content-inner
    %h2.title
      = page_title! @news.title
    .news-headline
      = paragraph(@news.headline)

    .news-content
      %figure.news-figure
        = image_tag @news.image_url(:show) if @news.image?
      = paragraph(@news.content)
    = link_to 'Back', news_index_path, :class => 'button button-back'
