= form_for @about, :html => { multipart: true } do |f|
  - if @about.errors.any?
    #error_explanation
      %h2= "#{pluralize(@about.errors.count, "error")} prohibited this about from being saved:"
      %ul
        - @about.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :history
    = f.text_area :history, class: 'tinymce'
  .field
    = f.label :commitment
    = f.text_area :commitment, class: 'tinymce'
  .field
    = f.label :commitment_image
    = f.file_field :commitment_image
  .field
    = f.label :vision
    = f.text_area :vision, class: 'tinymce'
  .field
    = f.label :vision_image
    = f.file_field :vision_image
  .field
    = f.label :mission
    = f.text_area :mission, class: 'tinymce'
  .field
    = f.label :mission_image
    = f.file_field :mission_image
  .actions
    = f.submit 'Save'
